# Clerk Authentication (Production keys from prototype)
# IMPORTANT: Get your actual production keys from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=

# Clerk URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/trade/new
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/trade/new

# Clerk Frontend API (without https://)
NEXT_PUBLIC_CLERK_FRONTEND_API=

# Application Settings
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Xero OAuth Configuration (Required for buyer lookup and invoice creation)
# Get these from: https://developer.xero.com/app/manage
#
# SECURITY NOTES:
# - NEXT_PUBLIC_XERO_CLIENT_ID: OAuth 2.0 spec allows client_id to be public
#   This is exposed to the browser and is safe/intentional for OAuth flows
# - XERO_CLIENT_SECRET: Server-only secret, NEVER exposed to client
#   Used only in /api routes for token exchange and API authentication
NEXT_PUBLIC_XERO_CLIENT_ID=
XERO_CLIENT_SECRET=

# Xero Webhook Secret
# Used to verify webhook signatures from Xero
# Generate a strong random string: openssl rand -base64 32
XERO_WEBHOOK_SECRET=

# Xero System User ID
# Clerk user ID for system operations (webhooks, background jobs)
# Get from Clerk Dashboard > Users > find system admin user
XERO_SYSTEM_USER_ID=

# Xata Database
# Get these from: https://app.xata.io
XATA_API_KEY=
XATA_BRANCH=main

# Make.com Webhook
# Optional: URL for Make.com trade webhook integration
# Used to forward trade data to external automation workflows
MAKE_TRADE_WEBHOOK_URL=

